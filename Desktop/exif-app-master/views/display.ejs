<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/style.css" type="text/css" rel="stylesheet">
	<title><%=title%></title>
</head>

<body>
	<div class="box display">
		<% if (title != "" || description != "") { %>
		<div class="display">
			<% if (title != "") { %>
			<h1><%=title%></h1>
			<% }%>
			<% if (description != "") { %>
			<h3><%=description%></h3>
			<% }%>
		</div>
		<% }%>
		<div class="displayleft">
			<img src='data:"<%=mimetype%>";base64, <%=data%>' id="img" /></div>
		<div class="displayright">
			<table>
				<tr>
					<td>
						Make: <%=make%></>
					</td>
				</tr>
				<tr>
					<td>
						Model: <%=model%></br>
					</td>
				</tr>
				<tr>
					<td>
						Created on: <%=created%></br>
					</td>
				</tr>
				<% if (latitude != "" && latitude != "longitude") { %>
				<tr>
					<td>
						Location:
						<a href="/map/<%=latitude%>/<%=longitude%>">Map</a>
					</td>
				</tr>
				<% }%>
			</table>
			<input type="button" onclick="location.href='/';" value="Home" />
		</div>
		<div class="clear"></div>
	</div>
</body>

</html>